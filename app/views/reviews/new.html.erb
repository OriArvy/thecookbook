<div class="container">
  <div class="row">
    <div class="col-xs-4">
      <%= simple_form_for([@recipe, @review], html: { class: "review_form" }) do |f| %>
        <%= f.input :content, as: :text %>
        <%= f.input :rating, collection: (1..5).to_a, label: "Rate this recipe" %>
        <%= f.submit "Send your review" %>
      <% end %>
    </div>
  </div>
</div>
