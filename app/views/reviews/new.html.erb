<div class="container w-50 h-100">
  <div class="row mt-5">
    <div class="col-xs-4">
      <%= simple_form_for([@recipe, @review]) do |f| %>
        <%= f.input :content, as: :text, input_html: { id: "review-box" } %>
        <%= f.input :rating, collection: (1..5).to_a, input_html: { id: "review-stars" }, label: "Rate this recipe" %>
        <%= f.submit "Send your review", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
