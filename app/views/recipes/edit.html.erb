<h1>Edit a Recipe</h1>
<%= simple_form_for @recipe do |f| %>
  <%= f.input :name, class: 'form-control' %>
  <%= f.input :description, class: 'form-control' %>
  <div class="row">

        <div class="col-md-6">
          <h3>Ingredients</h3>
          <div id="ingredients">
            <%= f.simple_fields_for :ingredients do |ingredient| %>
            <%= render "ingredient_fields", :f => ingredient %>
            <% end %>
            <div class="ingredients">
            <%= link_to_add_association 'Add ingredient', f, :ingredients, class: "btn btn-default" %>
            </div>
          </div>
        </div>

        <div class="col-md-6">
          <h3>Instructions</h3>
          <div id="instructions">
            <%= f.simple_fields_for :instructions do |instruction| %>
            <%= render "instruction_fields", :f => instruction %>
            <% end %>
            <div class="instructions">
            <%= link_to_add_association 'Add instruction', f, :instructions, class: "btn btn-default" %>
          </div>
        </div>
      </div>
  <%= f.button :submit, class: "btn btn-primary" %>
<% end %>

<%= link_to "Back", root_path %>
