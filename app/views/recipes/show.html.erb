<h1>This is a recipe</h1>
<%= @recipe.name %>
<br>
<%= @recipe.description %>
<br>
<% if @recipe.photo.attached? %>
  <%= cl_image_tag @recipe.photo.key, height: 400, width: 400, crop: :fit %>
<% end %>
<br>

<div class="row">
  <div class="col-md-6">
    <h3>Ingredients</h3>
    <% @recipe.ingredients.each do |ingredient|  %>
    <%= ingredient.name %>
    <% end %>
  </div>

  <div class="col-md-6">
    <h3>Instructions</h3>
    <% @recipe.instructions.each do |instruction| %>
    <%= instruction.step %>
    <% end %>
  </div>
</div>
<%= link_to "Edit", edit_recipe_path, class: "btn btn-primary" %>
<%= link_to "Back", root_path, class: "btn btn-primary"  %>
<%= link_to "Delete", recipe_path, method: :delete, class: "btn btn-primary"  %>
