<div class="container">
  <h1 class="mt-5">This is a list of all your recipes</h1>
  <% if current_user.recipes.count == 0 %>
  <h2 class="mt-5"> <b>You haven't created any recipes just yet. Would you like to create one?</b></h2>
  <%= link_to "New Recipe", new_recipe_path, class: "btn btn-primary" %>
  <% else %>
<div class="cards mt-5">
<% current_user.recipes.each do |recipe| %>
  <div class="card-category">
    <div class="image-wrapper">
    <%= link_to cl_image_tag(recipe.photo.key, height: 250, width: 400), recipe_path(recipe) %>
    </div>
    <h5> <%=  link_to recipe.name, recipe %>
      <span class="gold">
<% if recipe.reviews.count == 0 %>
              <% else %>

                <% if recipe.result >= 4.8 && recipe.result <= 5 %>
                <i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i>

                <% elsif recipe.result >= 4.5 && recipe.result <= 4.799 %>
                <i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star-half"></i>

                <% elsif recipe.result >= 4 && recipe.result <= 4.5 %>
                <i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i>

                <% elsif recipe.result >= 3.5 && recipe.result <= 3.99 %>
                <i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star-half"></i>

                <% elsif recipe.result >= 3 && recipe.result <= 3.5 %>
                <i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i>

                <% elsif recipe.result >= 2.5 && recipe.result <= 2.99 %>
                <i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star-half"></i>

                <% elsif recipe.result >= 2 && recipe.result <= 2.5 %>
                <i class="fas fa-star"></i><i class="fas fa-star"></i>

                <% elsif recipe.result >= 1.5 && recipe.result <= 1.99 %>
                <i class="fas fa-star"></i><i class="fas fa-star-half"></i>

                <% elsif recipe.result >= 1 && recipe.result <= 1.5 %>
                <i class="fas fa-star"></i>
                <% end  %></span>
                <span class="no-dec">(<%= recipe.result %>)</span>
              <% end %>
            </h5>

  </div>
<% end %>
</div>
  <div class="mb-5">
    <%= link_to "Add another recipe", new_recipe_path, class: "btn btn-primary" %>
    <%= link_to "Back", root_path, class: "btn btn-primary" %>
  </div>
  <% end %>
</div>
